<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>

		<item name="android:windowActivityTransitions">true</item>

		<item name="android:windowEnterTransition">@transition/explode</item>
		<item name="android:windowExitTransition">@transition/explode</item>

		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>

		<item name="android:windowSharedElementEnterTransition">
			@transition/change_image_transform</item>
		<item name="android:windowSharedElementExitTransition">
			@transition/change_image_transform</item>
	</style>

	<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="Footer_Title" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/grey_dark</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Date" parent="@android:style/TextAppearance.Large">
		<item name="android:gravity">left</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">@color/grey_dark</item>
		<item name="android:drawablePadding">10dp</item>
		<item name="android:drawableStart">@drawable/vc_calendar</item>
		<item name="android:padding">10dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Description" parent="@android:style/TextAppearance.Medium">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">10dp</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="Toolbar" parent="ThemeOverlay.AppCompat">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
	</style>

	<style name="CollapsingToolbarLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:clipToPadding">false</item>
	</style>

	<style name="ImageViewDetail">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="CustomToolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:clipToPadding">false</item>
		<item name="android:theme">@style/Toolbar</item>
	</style>

	<style name="CardView.Light.Detail">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="CardRoot">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="TextAppearance.AppCompat.Title.CardText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="CardDropDown">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
		<item name="android:background">@drawable/vc_arrow_drop_down</item>
	</style>

	<style name="CardConstraint">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">12dp</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:visibility">gone</item>
	</style>

</resources>
